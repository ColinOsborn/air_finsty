<div class="panel panel-default">
  <div class="panel-heading">
    Create your Rental Listing
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @rental do |f| %>
      <div class="row">
        <div class="col-md-4 select">
          <div class="form-group">
            <label>Home Type</label>
            <%= f.select :home_type, [["Apartment", "Apartment"], ["House", "House"], ["Bed & Breakfast", "Bed & Breakfast"]],
                         id: "home_type", prompt: "Select...", class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4 select">
          <div class="form-group">
            <label>Rental Type</label>
            <%= f.select :rental_type, [["Entire", "Entire"], ["Private", "Private"], ["Shared", "Shared"]],
                         id: "rental_type", prompt: "Select...", class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4 select">
          <div class="form-group">
            <label>Accommodate</label>
            <%= f.select :accommodate, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                         id: "accommodate", prompt: "Select...", class: "form-control" %>
          </div>
        </div>
      </div>
        <div class="col-md-4 select">
          <div class="form-group">
            <label>Bedrooms</label>
            <%= f.select :bedroom, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                         id: "bedroom", prompt: "Select...", class: "form-control" %>
          </div>
        </div>
      </div>
        <div class="col-md-4 select">
          <div class="form-group">
            <label>Bathrooms</label>
            <%= f.select :bathroom, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                         id: "bathroom", prompt: "Select...", class: "form-control" %>
          </div>
        </div>
      </div>

      <div> <%= f.submit "Create Rental", class: "btn btn-normal" %> </div>
      <% end %>
    </div>
  </div>
</div>